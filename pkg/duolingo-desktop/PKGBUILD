pkgname=duolingo-desktop
pkgver=2.0.1
pkgrel=1
pkgdesc="Desktop client for Duolingo, using Electron"
arch=('any')
url="https://github.com/HoratiuMl/duolingo-desktop"
license=('GPL')
install=
source=("https://github.com/hmlendea/duolingo-desktop/releases/download/v${pkgver}/duolingo-desktop-${pkgver}.zip"
        "https://d35aaqx5ub95lt.cloudfront.net/favicon.ico")
sha256sums=('4ed0a32e27a354eedb34428b09a1a8ddfee8c7687e746d8f4487d212fc9217fb'
            'SKIP')

build() {
    cd ${srcdir}
    rm "${srcdir}/duolingo-desktop-${pkgver}.zip"
}

package() {
    install -d "${srcdir}" "${pkgdir}/opt/${pkgname}"
	install -d "${pkgdir}/usr/share/applications"
	install -d "${pkgdir}/usr/share/pixmaps"

    cp -r ${srcdir}/* "${pkgdir}/opt/${pkgname}/"
	install -m644 "${srcdir}/favicon.ico" "${pkgdir}/usr/share/pixmaps/duolingo.ico"
	install -m755 "${srcdir}/../${pkgname}.desktop" "${pkgdir}/usr/share/applications"
}

